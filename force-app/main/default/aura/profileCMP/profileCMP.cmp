<aura:component controller="RecordAccessLightning">
    <aura:method name="doInit" description="Sample method with parameters">
        <aura:attribute name="userID" type="String"/>
        <aura:attribute name="objectAPI" type="String"/>
        <aura:attribute name="callback" type="Function" />
    </aura:method>                                            
    <aura:attribute name="profile" type="sObject" default="{}"/>
    <aura:attribute name="errorMessage" type="String" default=""/>
    
    <lightning:notificationsLibrary aura:id="notifLib"/>
    
    <!-- Main Container -->
    <div class="slds-card">
        <!-- Header Section -->
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <lightning:icon iconName="standard:user" size="small"/>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <span class="slds-text-heading_small">User Profile</span>
                    </h2>
                </div>
            </header>
        </div>
        
        <!-- Body Section -->
        <div class="slds-card__body slds-card__body_inner">
            <!-- Profile Name -->
            <dl class="slds-list_horizontal slds-wrap slds-m-bottom--medium">
                <dt class="slds-item_label slds-text-color_weak slds-truncate" style="width: 120px;">Profile Name:</dt>
                <dd class="slds-item_detail slds-truncate">
                    <strong><lightning:formattedText value="{!v.profile.profileName}" /></strong>
                </dd>
            </dl>
            
            <!-- Object Permissions Table -->
            <div class="slds-section slds-is-open">
                <h3 class="slds-section__title">
                    <span class="slds-truncate slds-p-horizontal_small slds-text-heading_small">Object Permissions</span>
                </h3>
                <div class="slds-section__content">
                    <div style="overflow-x: auto;">
                        <table class="slds-table slds-table_cell-buffer slds-table_bordered" style="table-layout: fixed; width: 100%;">
                            <thead>
                                <tr class="slds-line-height_reset">
                                    <th style="width: 16.66%;" scope="col"><div class="slds-truncate">Create</div></th>
                                    <th style="width: 16.66%;" scope="col"><div class="slds-truncate">Read</div></th>
                                    <th style="width: 16.66%;" scope="col"><div class="slds-truncate">Edit</div></th>
                                    <th style="width: 16.66%;" scope="col"><div class="slds-truncate">Delete</div></th>
                                    <th style="width: 16.66%;" scope="col"><div class="slds-truncate">View All</div></th>
                                    <th style="width: 16.66%;" scope="col"><div class="slds-truncate">Modify All</div></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td data-label="Create" class="slds-text-align_center">
                                        <lightning:input type="checkbox" disabled="true" checked="{!v.profile.create}" variant="label-hidden" />
                                    </td>
                                    <td data-label="Read" class="slds-text-align_center">
                                        <lightning:input type="checkbox" disabled="true" checked="{!v.profile.read}" variant="label-hidden" />
                                    </td>
                                    <td data-label="Edit" class="slds-text-align_center">
                                        <lightning:input type="checkbox" disabled="true" checked="{!v.profile.edit}" variant="label-hidden" />
                                    </td>
                                    <td data-label="Delete" class="slds-text-align_center">
                                        <lightning:input type="checkbox" disabled="true" checked="{!v.profile.del}" variant="label-hidden" />
                                    </td>
                                    <td data-label="View All Records" class="slds-text-align_center">
                                        <lightning:input type="checkbox" disabled="true" checked="{!v.profile.viewAllRecords}" variant="label-hidden" />
                                    </td>
                                    <td data-label="Modify All Records" class="slds-text-align_center">
                                        <lightning:input type="checkbox" disabled="true" checked="{!v.profile.modifyAllRecords}" variant="label-hidden" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Additional Permissions -->
                    <div class="slds-m-top--medium">
                        <dl class="slds-list_horizontal slds-wrap">
                            <dt class="slds-item_label slds-text-color_weak slds-truncate" style="width: 150px;">Modify All Data:</dt>
                            <dd class="slds-item_detail">
                                <lightning:input type="checkbox" disabled="true" checked="{!v.profile.modifyAllData}" variant="label-hidden" />
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</aura:component>
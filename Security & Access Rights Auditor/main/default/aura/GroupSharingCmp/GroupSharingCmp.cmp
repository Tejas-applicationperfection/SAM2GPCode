<aura:component controller="RecordAccessLightning">
    <aura:method name="doInit" description="Sample method with parameters">
        <aura:attribute name="userID" type="String"/>
        <aura:attribute name="objectID" type="String"/>
        <aura:attribute name="callback" type="Function" />
    </aura:method>                                            
    <aura:attribute name="GroupShr" type="sObject" default="{}"/>
    <aura:attribute name="GroupShrKeys" type="List" />
    <aura:attribute name="GroupShrDetails" type="List" />
    
    <!-- Main Container -->
    <div class="slds-card">
        <!-- Header Section -->
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <lightning:icon iconName="standard:groups" size="small"/>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <span class="slds-text-heading_small">Public Group Sharing Settings</span>
                    </h2>
                </div>
            </header>
        </div>
        
        <!-- Body Section -->
        <div class="slds-card__body slds-card__body_inner">
            <!-- Group Information Section -->
            <aura:if isTrue="{!v.GroupShr.groupList.length > 0}">
                <div class="slds-section slds-is-open slds-m-bottom--medium">
                    <h3 class="slds-section__title">
                        <span class="slds-truncate slds-p-horizontal_small slds-text-heading_small" title="Group Information">Group Information</span>
                    </h3>
                    <div class="slds-section__content slds-p-around--small">
                        <aura:iteration items="{!v.GroupShr.groupList}" var="group">
                            <div class="slds-box slds-box_x-small slds-m-bottom--small">
                                <dl class="slds-list_horizontal slds-wrap">
                                    <dt class="slds-item_label slds-text-color_weak slds-truncate" style="width: 150px;">Group Name:</dt>
                                    <dd class="slds-item_detail slds-truncate">
                                        <lightning:formattedText value="{!group.Name}" />
                                    </dd>
                                </dl>
                                <dl class="slds-list_horizontal slds-wrap slds-m-top--x-small">
                                    <dt class="slds-item_label slds-text-color_weak slds-truncate" style="width: 150px;">Group ID:</dt>
                                    <dd class="slds-item_detail slds-truncate">
                                        <lightning:formattedText value="{!group.Id}" />
                                    </dd>
                                </dl>
                            </div>
                        </aura:iteration>
                    </div>
                </div>
            </aura:if>
            
            <!-- Sharing Details Table -->
            <aura:if isTrue="{!v.GroupShrDetails.length > 0}">
                <div class="slds-section slds-is-open">
                    <h3 class="slds-section__title">
                        <span class="slds-truncate slds-p-horizontal_small slds-text-heading_small" title="Sharing Details">Sharing Details</span>
                    </h3>
                    <div class="slds-section__content">
                        <div style="overflow-x: auto;">
                            <table class="slds-table slds-table_cell-buffer slds-table_bordered slds-table_striped" style="table-layout: fixed; width: 100%;">
                                <thead>
                                    <tr class="slds-line-height_reset">
                                        <th style="width: 30%;" scope="col">
                                            <div class="slds-truncate" title="User/Group ID">User/Group ID</div>
                                        </th>
                                        <th style="width: 15%;" scope="col">
                                            <div class="slds-truncate" title="Access Level">Access Level</div>
                                        </th>
                                        <th style="width: 25%;" scope="col">
                                            <div class="slds-truncate" title="Row Cause">Row Cause</div>
                                        </th>
                                        <th style="width: 30%;" scope="col">
                                            <div class="slds-truncate" title="Share ID">Share ID</div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <aura:iteration items="{!v.GroupShrDetails}" var="entry">
                                        <tr class="slds-hint-parent">
                                            <td data-label="User/Group ID">
                                                <div class="slds-truncate" title="{!entry.details.UserOrGroupId}">
                                                    <lightning:formattedText value="{!entry.details.UserOrGroupId}" />
                                                </div>
                                            </td>
                                            <td data-label="Access Level">
                                                <div class="slds-truncate" title="{!entry.accessLevelValue}">
                                                    <lightning:badge label="{!entry.accessLevelValue}" />
                                                </div>
                                            </td>
                                            <td data-label="Row Cause">
                                                <div class="slds-truncate" title="{!entry.details.RowCause}">
                                                    <lightning:formattedText value="{!entry.details.RowCause}" />
                                                </div>
                                            </td>
                                            <td data-label="Share ID">
                                                <div class="slds-truncate" title="{!entry.details.Id}">
                                                    <lightning:formattedText value="{!entry.details.Id}" />
                                                </div>
                                            </td>
                                        </tr>
                                    </aura:iteration>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </aura:if>
            
            <!-- Empty State -->
            <aura:if isTrue="{!v.GroupShrDetails.length == 0}">
                <div class="slds-illustration slds-illustration_small">
                    <div class="slds-text-longform">
                        <p class="slds-text-body_regular slds-text-color_weak">No group sharing settings found for this record.</p>
                    </div>
                </div>
            </aura:if>
        </div>
    </div>
</aura:component>
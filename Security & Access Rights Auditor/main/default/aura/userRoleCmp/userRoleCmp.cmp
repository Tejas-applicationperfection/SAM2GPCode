<aura:component controller="RecordAccessLightning">
    <aura:method name="doInit" description="User Role method with parameters">
        <aura:attribute name="userID" type="String"/>
        <aura:attribute name="objectID" type="String"/>
        <aura:attribute name="callback" type="Function" />
    </aura:method>
    <aura:attribute name="userRoleWrapper" type="sObject" default="{}"/>
    <aura:attribute name="userRoleName" type="String"/>
    
    <!-- Main Container -->
    <div class="slds-card">
        <!-- Header Section -->
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <lightning:icon iconName="standard:user_role" size="small"/>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <span class="slds-text-heading_small">User Role: <lightning:formattedText value="{!v.userRoleWrapper.userRoleName}" /></span>
                    </h2>
                </div>
            </header>
        </div>
        
        <!-- Body Section -->
        <div class="slds-card__body slds-card__body_inner">
            <aura:if isTrue="{!v.userRoleWrapper.userSharingRoleWrapperList.length > 0}">
                <div class="slds-section slds-is-open">
                    <h3 class="slds-section__title">
                        <span class="slds-truncate slds-p-horizontal_small slds-text-heading_small">Shared Via Role Hierarchy</span>
                    </h3>
                    <div class="slds-section__content">
                        <aura:iteration items="{!v.userRoleWrapper.userSharingRoleWrapperList}" var="userRole">
                            <div class="slds-box slds-box_x-small slds-m-bottom--small">
                                <div class="slds-text-body_regular">
                                    This record was shared with user 
                                    <strong><lightning:formattedText value="{!userRole.userName}" /></strong>
                                    - role 
                                    <strong><lightning:formattedText value="{!userRole.userSharingRoleName}" /></strong>:
                                </div>
                                
                                <aura:if isTrue="{!userRole.userSharingRoleList}">
                                    <ul class="slds-list_dotted slds-m-top--small slds-m-left--medium">
                                        <aura:iteration items="{!userRole.userSharingRoleList}" var="userSharingRole">
                                            <li class="slds-item">
                                                <lightning:formattedText value="{!userSharingRole}" />
                                            </li>
                                        </aura:iteration>
                                    </ul>
                                </aura:if>
                            </div>
                        </aura:iteration>
                    </div>
                </div>
            </aura:if>
            
            <!-- Empty State -->
            <aura:if isTrue="{!v.userRoleWrapper.userSharingRoleWrapperList.length == 0}">
                <div class="slds-illustration slds-illustration_small">
                    <div class="slds-text-longform">
                        <p class="slds-text-body_regular slds-text-color_weak">No role hierarchy sharing found for this record.</p>
                    </div>
                </div>
            </aura:if>
        </div>
    </div>
</aura:component>